<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- 변수 정의 -->
  <property name="LOG_PATH" value="./.logs"/>
  <property name="LOG_PATTERN"
    value="%d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/> <!-- 로그 출력 패턴 -->

  <!-- 콘솔 출력 설정 -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- 파일 출력 설정 -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- 현재 기록 중인 파일명 -->
    <file>${LOG_PATH}/discodeit.log</file>

    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>

    <!-- 롤링 정책 (일자별 파일 분리, 30일 보관) -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- 지난 로그 파일명 패턴 (.gz로 압축) -->
      <fileNamePattern>${LOG_PATH}/discodeit-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <!-- 보관 기간 30일 -->
      <maxHistory>30</maxHistory>
      <!-- 전체 로그 파일 크기 제한 (3GB) -->
      <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <!-- 프로필별 Logger 설정 -->
  <!-- 개발 환경 (dev) : 콘솔 + 파일, DEBUG 레벨 -->
  <springProfile name="dev">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>"
    </root>
    <!-- 패키지 DEBUG 레벨로 자세히 보기 -->
    <logger name="com.sprint.mission.discodeit" level="DEBUG"/>
  </springProfile>

  <!-- 운영 환경 (prod) : 파일 위주, INFO 레벨 -->
  <springProfile name="prod">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/> <!-- 운영 환경에서도 콘솔 로그 남기기 (Docker 컨테이너 로그 수집 용도) -->
      <appender-ref ref="FILE"/>
    </root>
    <!-- 패키지 INFO 레벨. 중요 정보만 -->
    <logger name="com.sprint.mission.discodeit" level="INFO"/>
  </springProfile>

  <!-- 기본 설정 (프로필이 없을 때) -->
  <springProfile name="default">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>

</configuration>